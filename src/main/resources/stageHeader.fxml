<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.fearnixx.lolbanpick.stage.StageFX"
      GridPane.columnIndex="0" GridPane.columnSpan="2"
      GridPane.rowIndex="0"
      styleClass="stage-bar"
      onMousePressed="#onMousePressed"
      onMouseDragged="#onMouseDragged"
>
    <padding>
        <Insets left="5" />
    </padding>
    <TextFlow>
        <Text>Vigilant Bans | &#169; FearNixx UG (haftungsbeschr√§nkt)</Text>
    </TextFlow>
    <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
        <Button fx:id="minimizeBtn"
                styleClass="stage-button, minimize"
                onAction="#minimizeClick"
        />
        <Button fx:id="closeBtn"
                styleClass="stage-button, close"
                onAction="#closeClick"
        />
    </HBox>
</HBox>